{% extends 'adminbase.html.twig' %}

{% block title %}Ürün Listele!{% endblock %}

{% block content %}
    <br><br><br>
    <!-- main content start-->
    <div id="page-wrapper">
        <div class="main-page">
            <h2 class="title1">Ürün Listesi
                </h2>


            <div class="bs-example widget-shadow" data-example-id="contextual-table">
                <table class="table">
                    <tr><tr><td>
                            <img src="{{ asset('admin') }}/uploads/images/{{ products.image }}" width="350px">
                        </td>
                    </tr>
                    <tr>
                        <th>Isim</th>
                        <td>{{ products.isim }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ products.code }}</td>
                    </tr>
                    <tr>
                        <th>Fiyat</th>
                        <td>{{ products.fiyat }} TL</td>
                    </tr>
                    <tr>
                        <th>Beden</th>
                        <td>{{ products.beden }}</td>
                    </tr>
                    <tr>
                        <th>Ozellik</th>
                        <td>{{ products.ozellik }}</td>
                    </tr>
                    <tr>
                        <th>Renk</th>
                        <td>{{ products.renk }}</td>
                    </tr>
                    <tr>
                        <th>Adet</th>
                        <td>{{ products.adet }}</td>
                    </tr></tr>
                </table>

                <a href="{{ path('admin_products_index') }}">back to list</a>

                <a href="{{ path('admin_products_edit', {'id': products.id}) }}">edit</a>

                {{ include('admin/products/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
